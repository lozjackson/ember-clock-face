<h2 id="title">ember-clock-face</h2>

<div>
  {{format-time clock.hour '12-hour'}}:{{pad-zero clock.minute}}:{{pad-zero clock.second}} {{format-time clock.hour 'meridian'}}
</div>

<div>
  {{clock-face}}
  {{clock-face showClockNumbers=true}}
  {{clock-face showClockHours=true}}
  {{clock-face showClockHours=true showClockMinutes=true}}
  {{clock-face showClockMinutes=true}}
</div>

<div>
  {{input type="checkbox" checked=showClockNumbers}} Show Clock Numbers<br>
  {{input type="checkbox" checked=showClockHours}} Show Clock Hours<br>
  {{input type="checkbox" checked=showClockMinutes}} Show Clock Minutes<br>
  {{input type="range" value=clockSize min="1" max="1000" step="0.01"}} Size {{clockSize}}<br>
  {{input type="range" value=faceRadius min="1" max="100" step="0.01"}} Clock face radius {{faceRadius}}
</div>

{{clock-face size=clockSize faceRadius=faceRadius showClockNumbers=showClockNumbers showClockHours=showClockHours showClockMinutes=showClockMinutes}}

{{outlet}}
