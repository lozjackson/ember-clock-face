<circle class="face" cx="50" cy="50" r={{faceRadius}} />
<g>
  {{#each clockNumbers as |number|}}
    {{#if showClockNumbers}}
      <text x={{number.x}} y={{number.y}} class="clock-number">{{number.text}}</text>
    {{/if}}
    {{#if showClockHours}}
      {{hour-marker value=number.text}}
    {{/if}}
  {{/each}}
</g>

{{#if showClockMinutes}}
  <g>
    {{#each clockMinutes as |minute|}}
      {{minute-marker value=minute.value}}
    {{/each}}
  </g>
{{/if}}
<g>
	{{hour-hand}}
	{{minute-hand}}
	{{second-hand}}
</g>
